FROM python:latest

RUN apt -y update \
&& apt -y install git \
&& apt -y install openjdk-11-jdk \
&& apt -y install \
    ca-certificates \
    curl \
    gnupg \
    lsb-release

RUN mkdir -p /etc/apt/keyrings \
&& curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg

RUN echo \
 "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
 focal stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

RUN apt -y update \
&& apt -y install docker-ce docker-ce-cli containerd.io docker-compose-plugin

RUN curl -L -O https://github.com/github/codeql-action/releases/latest/download/codeql-bundle-linux64.tar.gz \
&& tar -xvzf ./codeql-bundle-linux64.tar.gz \
&& mv codeql /opt \
&& rm codeql-bundle-linux64.tar.gz \
&& mkdir -p /codeql-dbs/example-repo-multi
ENV PATH /opt/codeql:$PATH

ENTRYPOINT /bin/sh

